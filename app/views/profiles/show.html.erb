
<p>
  <strong>Name:</strong>
  <%=@profile.user.name%>
</p>

<%= link_to 'Edit Profile', edit_profile_path(@profile) %>

<p>
  <strong>Bio:</strong>
  <%= @profile.bio %>
</p>

<p>
  <strong>Location:</strong>
  <%= @profile.location %>
</p>

<p>
  <strong>Website:</strong>
  <%= @profile.website %>
</p>


<%= link_to 'All Profiles', profiles_path %> |
<%= link_to "New Post", new_post_path %>


<% @profile.user.posts.reverse_order.each do |post| %>
    <tr>
      <div class="post">
        <p><%= post.message %> | <%= time_ago_in_words(post.created_at) %></p>
        <p><%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </tr>
<% end %>